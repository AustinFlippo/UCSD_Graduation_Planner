# ============================================================================
# AIVac Academic Planner - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual API keys and configuration
# DO NOT commit the .env file to version control
# ============================================================================

# OpenAI Configuration (Required for RAG Chat System)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Configuration (Optional - for Claude models)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Pinecone Configuration (Required for Vector Database)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=course-embeddings

# RAG System Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini-2024-07-18
EMBEDDING_MODEL=text-embedding-3-small

# Server Configuration
# FastAPI Backend
HOST=0.0.0.0
PORT=8000

# Express Server
EXPRESS_PORT=5050

# Frontend Dev Server
VITE_PORT=5173

# Database Configuration (if needed in future)
# MONGODB_URI=mongodb://localhost:27017/aivac

# API Endpoints
# FASTAPI_URL=http://localhost:8000
# EXPRESS_URL=http://localhost:5050
# FRONTEND_URL=http://localhost:5173

FASTAPI_URL=http://localhost:8000
EXPRESS_URL=http://localhost:5050
FRONTEND_URL=http://localhost:5173

# Security Settings
SESSION_SECRET=your-session-secret-here
JWT_SECRET=your-jwt-secret-here

# Development Settings
NODE_ENV=development
DEBUG=true